<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:DeveloperPortal.ViewModels"
             x:Class="DeveloperPortal.DevProfile"
             x:DataType="viewmodel:DevProfileViewModel"
             Title="{Binding TitleLabel}">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">
            <Label Text="{Binding AdjustLanguageLabel}"
                   FontAttributes="Bold" />
            <Switch IsToggled="{Binding IsDutchEnabled}"
                    Toggled="Switch_Toggled" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>