<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:DeveloperPortal"
             x:Class="DeveloperPortal.SentryErrors">

    <StackLayout>
        <Button Text="Back" 
                HorizontalOptions="Start" 
                WidthRequest="100" 
                Clicked="OnBackButtonClicked"
                VerticalOptions="Center"
                BackgroundColor="#c6002a"
                Margin="10,0" />
        <ListView x:Name="ErrorsListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Vertical" Padding="10">
                            <Label Text="{Binding Title}" FontAttributes="Bold" />
                            <Label Text="{Binding Culprit}" />
                            <Button Text="Create Issue"
                                    HorizontalOptions="Start"
                                    WidthRequest="150"
                                    Clicked="CreateJiraBug"
                                    BackgroundColor="#c6002a"
                                    Margin="10,0" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>